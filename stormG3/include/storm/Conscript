Import qw(cons header_directory);

$headers = "defines.h module.h return_value.h storm.h types.h";

Command $cons 'install', '', "mkdir -p $header_directory/storm && for e in $headers ; do install include/storm/\$e $header_directory/storm || exit ; done"
