Import qw(cons header_directory build_directory);

$headers = "memory.h port.h service.h";

Command $cons 'install', $build_directory . "/source/ia32/stormG3", 
  "mkdir -p $header_directory/storm/ia32 && for e in $headers ; do install include/storm/ia32/\$e $header_directory/storm/ia32 || exit ; done"
