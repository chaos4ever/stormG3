# $chaos: Conscript,v 1.2 2002/08/31 10:05:06 per Exp $ -*- Perl -*-

# Abstract: CONS script for the Unicode library.
# Author: Per Lundberg <per@chaosdev.org>

# Copyright 2002 chaos development.
# Use freely under the terms listed in the file LICENSE.

$library_binary = 'libunicode.a';

Import qw(cons library_static_directory);
Library $cons $library_binary, 'unicode.c';
Command $cons 'install', $library_binary, 
	qq(mkdir -p $library_static_directory
	   install unicode/$library_binary $library_static_directory);

# FIXME: Install headers also. We don't need it yet though.
