$module_binary = 'vga.so';

Import qw(cons module_directory);
Program $cons $module_binary, 'vga.c', 'vgamode.c';
Command $cons 'install', $module_binary, "mkdir -p $module_directory && " .
  "install vga/$module_binary $module_directory && gzip -9f $module_directory/$module_binary";

