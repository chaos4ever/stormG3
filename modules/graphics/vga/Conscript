$module_binary = 'vga.so';
$module_path = 'vga';

Import qw(cons module_directory install);
Program $cons $module_binary, 'vga.c', 'vgamode.c';
$install_cmd = eval $install;
Command $cons 'install', $module_binary, $install_cmd;

